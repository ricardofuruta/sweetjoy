
<div class='text-center'>

<h1>Check the details of your order</h1>

<%= render 'orders/form', order: @order %>

<%= form_tag order_payments_path(@order) do %>
  <article>
    <label class="amount">
      <span>Amount: $ <%= number_with_precision((@order.total / 100), :precision => 2 ) %></span>
    </label>
  </article>

  <!-- #Commented for the lecture, remove comments.  -->

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Order"
    data-description="Order number <%= @order.id %>"
    data-amount="<%= @order.total %>"
    data-currency="EUR"></script>

<% end %>
</div>
