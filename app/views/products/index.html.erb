
<div class="media-section media-aside text-center">

<h7 class="text-center" style="padding-top: 80px">Browse our cakes</h7>
<div class='container'>


<div class="hidden">
<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Baker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.baker.firstname %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
</div>

</div>

</div>

<div class="container">
<div class="card-columns">
<% @products.each do |product| %>
<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 column productbox">

   <%= image_tag product.photo, class: "img-responsive" %>

    <div class="producttitle"><%= product.name %></div>
    <div class="producttitle2" id="grey">by <%= product.baker.firstname %></div>

    <div class="productdescription"><%= product.description %></div>
    <div class="productprice" style="display: flex; align-items: center">
      <div class="pull-right">
      <% if current_user %>
        <%= link_to "Order", product_path(product), class: "btn btn-default"%>
      <% else %>
        <%= link_to "Log in to Buy", new_user_session_path, class: "btn btn-default"%>
      <% end %>
      </div>
      <div class="pricetext">R$<%= product.price %></div>
    </div>

</div>
<% end%>
</div>
</div>


