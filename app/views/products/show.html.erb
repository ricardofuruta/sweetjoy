<div class='productcard-container'>
  <div class='productcard'>
    <div class='productcard-photo'>
      <%= image_tag @product.photo.url, width: '100%' %>
      <div class='productcard-price'>
        <span style="background: #469AE0;
    display: inline-block;
    padding: 11px;
    font-size: 18px;
  /*  border-radius: 0 4px 4px 0;*/
    box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.49);"><%= @product.price %> R$</span>
      </div>
    </div>

    <div class='productcard-name'>
      <%= @product.name %>
    </div>

    <div class='productcard-description'>
      <%= @product.description %>
    </div>


    <div class="productcard-author">
      by <%= @product.baker.firstname %>
    </div>


    <button type="button" class="cart-button" data-toggle="modal" data-target=".bs-add-order-details">Add to Cart</button>
    <%= link_to 'Add to Cart', product_order_lines_path(@product, OrderLine.new), method: 'post', class:"cart-button" %>

    </div>
    </div>




<div class="modal fade bs-add-order-details" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <%= render 'order_lines/form', product: @product, order_line:OrderLine.new %>
      </div>
    </div>
  </div>
</div>
