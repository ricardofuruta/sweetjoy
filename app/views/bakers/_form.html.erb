<%= simple_form_for(@baker) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :firstname %>
  <%= f.input :lastname %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>
